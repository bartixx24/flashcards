<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style parent="Widget.MaterialComponents.TextView" name="Widget.Flashcards.TextView.ItemName">
        <item name="android:textAppearance">?attr/textAppearanceHeadline5</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style parent="Widget.MaterialComponents.TextView" name="Widget.Flashcards.TextView.ItemDesciption">
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
    </style>

    <style parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox" name="Widget.Flashcards.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">@dimen/round_corners_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/round_corners_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/round_corners_radius</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/round_corners_radius</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu" name="Widget.Flashcards.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxCornerRadiusTopStart">@dimen/round_corners_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/round_corners_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/round_corners_radius</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/round_corners_radius</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
    </style>

    <style parent="Widget.MaterialComponents.Button" name="Widget.Flashcards.Button.Learn">
        <item name="android:layout_height">@dimen/learn_button_height</item>
        <item name="android:layout_marginStart">6dp</item>
        <item name="android:layout_marginEnd">6dp</item>
        <item name="cornerRadius">16dp</item>
        <item name="iconSize">50dp</item>
        <item name="iconGravity">textTop</item>
    </style>

    <style parent="TextAppearance.MaterialComponents.Headline5" name="LearnCardText">
        <item name="android:textSize">22sp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="LearnCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">16dp</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

</resources>